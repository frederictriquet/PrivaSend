# Storage Configuration
STORAGE_PATH=./storage
MAX_FILE_SIZE=5368709120
CHUNK_SIZE=5242880
# SvelteKit body size limit (must be >= CHUNK_SIZE)
BODY_SIZE_LIMIT=10485760
# Leave empty to allow all file types, or specify comma-separated MIME types
# Example: image/jpeg,image/png,application/pdf
ALLOWED_MIME_TYPES=

# Database Configuration
DATABASE_PATH=./storage/privasend.db

# Retention Configuration
DEFAULT_EXPIRATION_DAYS=7
CLEANUP_INTERVAL_HOURS=1

# Share Link Configuration
LINK_EXPIRATION_DAYS=7

# Upload Configuration (Phase 1.6)
# Set to false to disable file uploads (shared-only mode)
UPLOAD_ENABLED=true

# Shared Volume Configuration (Phase 1.5)
SHARED_VOLUME_ENABLED=false
SHARED_VOLUME_PATH=./shared
SHARED_VOLUME_READ_ONLY=true
SHARED_VOLUME_MAX_DEPTH=10

# Authentication Configuration (Phase 1.7)
# Set to true to enable admin authentication
AUTH_ENABLED=false
# Admin password (REQUIRED if AUTH_ENABLED=true)
ADMIN_PASSWORD=changeme123
# Optional: Session secret for signing cookies (auto-generated if not set)
SESSION_SECRET=
# Optional: Session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24
# Optional: Login rate limit attempts per minute (default: 3)
LOGIN_RATE_LIMIT=3

# Audit Configuration (Phase 3)
# Audit log retention in days (default: 90)
AUDIT_RETENTION_DAYS=90
